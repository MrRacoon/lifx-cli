{
  "name": "lifx-client",
  "version": "1.1.1",
  "description": "A cli application for talking to the official lifx-api",
  "main": "index.js",
  "author": "Erik Sutherland",
  "license": "MIT",
  "preferGlobal": true,
  "keywords": [
    "lifx"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.js'",
    "build": "npm run clean; babel --out-dir=dist src",
    "test": "lifxcli -a && lifx -C green && lifx -C yellow && lifx -C white",
    "prepublish": "npm run lint && npm run build",
    "watch": "npm-scripts-watcher"
  },
  "watch": {
    "src/*.babel.js": [
      "build"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MrRacoon/lifx-cli.git"
  },
  "bugs": {
    "url": "https://github.com/MrRacoon/lifx-cli/issues"
  },
  "bin": {
    "lifx-client": "bin/lifx-client",
    "lifxcli": "bin/lifx-client",
    "lifx": "bin/lifx-client"
  },
  "lib": {
    "index": "dist/index.js"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "coffee-script": "^1.10.0",
    "isomorphic-fetch": "^2.2.1",
    "lifx-api": "~1.0.1",
    "lodash": "^4.5.1",
    "node-getopt": "~0.2.3",
    "node-notifier": "~4.5.0",
    "parse-color": "~1.0.0",
    "rc-yaml": "^2.0.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp": "~3.9.0",
    "gulp-coffee": "~2.3.1",
    "npm-scripts-watcher": "^1.0.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
